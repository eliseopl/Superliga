@{
    ViewData["Title"] = "Home";
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/home.css" />
</head>

<div class="col-lg-6 mt-lg-5">
    <div class="card bg-dark border-light text-white mb-3" style="display: flex; max-width: 18rem;">
        @* Card Header *@
        <div class="card-header">
            <form id="formFiles" action="#">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="addFileInput" class="col-form-label mb-0" style="cursor: pointer">
                        <i class="bi bi-plus-circle-fill" style="font-size:40px"></i>
                        <span id="fileInputText" class="card-text font-weight-bold ml-2">Añade tus archivos</span>
                    </label>
                    <input type="file" id="addFileInput" style="display: none; visibility:hidden;" accept=".csv" multiple>
                </div>
            </form>
        </div>

         @*Card Body*@ 
        <div class="card-body">
            <div class="form-group">
                <ul class="list-group list-group-flush mb-3" id="fileList"></ul>
                <div class="text-center">
                    <input id="btnUpload" class="btn btn-outline-light" style="cursor:pointer;" value="Enviar" disabled readonly />
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/js/Home/index.js" asp-append-version="true"></script>
}